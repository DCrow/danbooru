<%= edit_form_for(ban) do |f| %>
  <% if ban.new_record? %>
    <%= f.input :user_name, as: :string, input_html: { "data-autocomplete": "user" } %>
  <% end %>

  <%= f.input :duration, collection: (Ban::PERMITTED_DURATIONS + (ban.new_record? ? [] : [ban.duration])).uniq.sort.map { |value| [humanized_duration(value), value&.iso8601] }, selected: ban.duration&.iso8601 %>
  <%= f.input :reason %>
  <%= f.button :submit %>
<% end %>
